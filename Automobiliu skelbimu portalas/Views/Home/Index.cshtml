@model Automobiliu_skelbimu_portalas.Models.HomepageAdVM

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form asp-action="Search" asp-controller="Ad">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Search.CarMakeId" class="control-label"></label>
            @Html.DropDownListFor(q => q.Search.CarMakeId, new SelectList(Model.Search.MakeList, "Value", "Text"), "Select Make Type", new { @class = "form-control" })

        </div>
        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>
</div>
<div class="row">
    @if (!Model.Ads.Any())
    {
        <div class="alert alert-danger" role="alert">
            No Data Found
        </div>
    }
    else
    {
        @foreach (var item in Model.Ads)
        {
            <div class="auto-card">

                <div class="col-lg-3">
                    <a asp-action="Details" asp-controller="Ad" asp-route-id="@item.Id" target="_blank">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="https://autoplius-img.dgn.lt/ann_25_125613435/mercedes-benz-clk55-amg-5-4-l-kupe-coupe-2005-benzinas.jpg" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.CarMake.Title) - @Html.DisplayFor(modelItem => item.CarModel.Title)</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Year) (@Html.DisplayFor(modelItem => item.Price)$)</p>
                            </div>
                        </div>
                    </a>
                </div>

            </div>


        }
    }
</div>
