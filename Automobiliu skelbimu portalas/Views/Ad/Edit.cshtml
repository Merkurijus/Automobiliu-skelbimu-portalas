@model Automobiliu_skelbimu_portalas.Models.CreateAdVM

<h4>AdVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarMakeId" class="control-label"></label>
                @Html.DropDownListFor(q => q.CarMakeId, new SelectList(Model.MakeList, "Value", "Text"), "Select Make Type", new { @class = "form-control" })

            </div>
            <div class="form-group">
                <label asp-for="CarModelId" class="control-label"></label>
                @Html.DropDownListFor(q => q.CarModelId, new SelectList(Model.ModelList, "Value", "Text"), "Select Model Type", new { @class = "form-control" })

            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelTypeId" class="control-label"></label>
