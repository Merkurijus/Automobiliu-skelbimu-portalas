            </div>
            <div class="form-group">
                <label asp-for="BodyTypeId" class="control-label"></label>
                @Html.DropDownListFor(q => q.BodyTypeId, new SelectList(Model.BodyTypeList, "Value", "Text"), "Select Body Type", new { @class = "form-control" })

            </div>
            <div class="form-group">
                <label asp-for="EngineCapacity" class="control-label"></label>
                <input asp-for="EngineCapacity" class="form-control" />
                <span asp-validation-for="EngineCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kilometrage" class="control-label"></label>
                <input asp-for="Kilometrage" class="form-control" />
                <span asp-validation-for="Kilometrage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageId" class="control-label"></label>
                @Html.DropDownListFor(q => q.DamageId, new SelectList(Model.DamageList, "Value", "Text"), "Select Damage Type", new { @class = "form-control" })

            </div>
            <div class="form-group">
                <label asp-for="ColorId" class="control-label"></label>
                @Html.DropDownListFor(q => q.ColorId, new SelectList(Model.ColorList, "Value", "Text"), "Select Color Type", new { @class = "form-control" })

            </div>
