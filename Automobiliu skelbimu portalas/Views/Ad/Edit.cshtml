                <label asp-for="NumberOfSeats" class="control-label"></label>
                <input asp-for="NumberOfSeats" class="form-control" />
                <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GearBoxId" class="control-label"></label>
                @Html.DropDownListFor(q => q.GearBoxId, new SelectList(Model.GearBoxList, "Value", "Text"), "Select Gear Box Type", new { @class = "form-control" })

            </div>
            <div class="form-group">
                <label asp-for="SteeringWheel" class="control-label"></label>
                <input asp-for="SteeringWheel" class="form-control" />
                <span asp-validation-for="SteeringWheel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
